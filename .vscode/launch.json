{
  "configurations": [
    {
      "name": "Remote - Server Debug",
      "type": "python",
      "request": "attach",
      "host": "ckan",
      "port": 5678,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/opt/ckan"
        },
        {
          "localRoot": "${workspaceFolder}/ckanext",
          "remoteRoot": "/usr/lib/ckan/.local/lib/python3.10/site-packages/ckanext"
        },
        {
          "localRoot": "${workspaceFolder}/ckan",
          "remoteRoot": "/usr/lib/ckan/.local/lib/python3.10/site-packages/ckan"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
